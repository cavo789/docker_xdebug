            <group>auth</group>
            <group>citizens</group>
            <group>cyclementions</group>
            <group>cyclestatus</group>
            <group>fake</group>
            <group>functions</group>
            <group>languages</group>
            <group>organizations</group>
            <group>profiles</group>
            <group>roles</group>
            <group>users</group>
